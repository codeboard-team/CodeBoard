<!DOCTYPE html>
<html>
  <head>
    <title>CodeBorad</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%= stylesheet_link_tag  'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag  'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag  'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="bg-white font-sans leading-normal tracking-normal">

  <% flash.each do |type, message| %>
    <% if type == "alert" %>
      <div class="bg-red-500">
        <div class="container px-2 mx-auto py-4 text-white text-center font-medium font-sans"><%= message %></div>
      </div>
    <% end %>
    <% if type == "notice" %>
      <div class="bg-green-500">
        <div class="container px-2 mx-auto py-4 text-white text-center font-medium font-sans"><%= message %></div>
      </div>
    <% end %>
  <% end %>



<nav class="flex items-center justify-between flex-wrap bg-gray-100 py-3 lg:px-10 px-3 text-gray-700 border-b border-gray-400">



  <div class="flex items-center flex-no-shrink mr-10">
    <%= link_to "CodeBoard", root_path, class:"link text-xl tracking-tight font-semibold" %>
  </div>


  <div class="block lg:hidden">
    <button id="nav-toggle" class="flex items-center px-3 py-2 border rounded text-gray-500 border-gray-600 hover:text-black hover:border-blue-600">
      <svg class="fill-current h-3 w-3" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><title>Menu</title><path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"/></svg>
    </button>
  </div>


  <div class="w-full flex-grow lg:flex lg:items-center lg:w-auto hidden lg:block pt-6 lg:pt-0" id="nav-content">

    <div class="lg:flex-grow">
      <ul class="list-reset lg:flex justify-start flex-1 items-center">
        <li class="mr-3">
          <%= link_to "Explore", "#", class: "block border-b-2 border-transparent hover:border-indigo-400 mt-4 lg:inline-block lg:mt-0 lg:mr-4 mb-2 lg:mb-0 link" %>
        </li>
        <li class="mr-3">
          <%= link_to "Practice", "#", class: "block border-b-2 border-transparent hover:border-indigo-400 mt-4 lg:inline-block lg:mt-0 lg:mr-4 mb-2 lg:mb-0 link" %>
        </li>
        <li class="mr-3">
          <%= link_to "Question", "#", class: "block border-b-2 border-transparent hover:border-indigo-400 mt-4 lg:inline-block lg:mt-0 lg:mr-4 mb-2 lg:mb-0 link" %>
        </li>
        <li class="mr-3">
          <%= link_to "Contest", "#", class: "block border-b-2 border-transparent hover:border-indigo-400 mt-4 lg:inline-block lg:mt-0 lg:mr-4 mb-2 lg:mb-0 link" %>
        </li>
      </ul>

      
      
      
      
      
    </div>


    <div class="w-full block lg:flex lg:flex-row lg:flex-1 mt-2 lg:mt-0 text-center lg:text-left lg:justify-end items-center">
      <% if user_signed_in? %>
        <p class="mr-4"><%= current_user.name %></p>
        <%= link_to "Log out", destroy_user_session_path, method: :delete, class:"btn btn-default mb-2 lg:mr-2 lg:mb-0 block" %>
      <% else %>
        <%= link_to "Login", new_user_session_path, class:"btn btn-default mb-2 lg:mr-2 lg:mb-0 block" %>
      <%= link_to "Sign Up", new_user_registration_path, class:"btn btn-default block" %>
      <% end %>
    </div>  
    
    
  </div>
</nav>





<script>
  //Javascript to toggle the menu
  document.getElementById('nav-toggle').onclick = function(){
    document.getElementById("nav-content").classList.toggle("hidden");
  }
</script>

    <main class="lg:px-10 px-4">
      <%= content_for?(:content) ? yield(:content) : yield %>
    </main>
  </body>

  
</html>
