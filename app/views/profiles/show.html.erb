

<div class="container max-w-full my-12 mx-auto px-4 md:px-12">




  <div id="profile-info" class="relative flex w-full bg-white rounded py-4 my-4 mb-8 px-4 shadow">
    <!--<div class="profile-img-box mr-4">
      <%= image_tag(@user.avatar_thumbnail) %>
    </div>
    -->
    <div class="">
      <% if @user.username == nil? %>
        <%= email_account(@user) %>
      <% else %>
        <%= @user.username %>
      <% end %>
      <div>
      <%= @user.email %>
      <% if current_user == @user %>
        <div class=" right-0 top-0 absolute p-4">
          <%= link_to(edit_user_registration_path, 
                          :class => 'w-2 text-gray-500 hover:text-gray-700 text-white py-1 mr-1') do %>
                <i class="btn-edit fa fa-pencil  text-2xl"></i>
          <% end %>
        </div>
      <% end %>
    </div>

    </div>


  </div>

  <div class="flex flex-col">
  
    <div class="bg-white align-middle block min-w-full shadow overflow-hidden sm:rounded-lg ">
      
      <div id="tab-board-index" class=" w-full">
        <ul class="flex w-full mb-6">
          <li id="profile-tab-boards" class="active w-1/2 text-center block text-xl text-blue-600 bg-gray-200 rounded-tl py-5">
            出題紀錄
          </li>
          <li id="profile-tab-cards" class="w-1/2  text-center block text-xl text-blue-600 bg-gray-200 rounded-tr py-5">
            解題紀錄
        </ul>
      </div>
      <div id="profile-boards" class="my-5 pt-4 pb-8 mx-5 grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-3">
        <% @user.boards.try(:each) do |board| %>
          <%= link_to board_path(board.id), class: 'border bg-white overflow-hidden shadow rounded-lg' do %>
            <div class="bg-white px-4 py-5 sm:p-6">
              <dl>
                <div class="flex">
                  <span class="flex flex-grow justify-start px-2.5 py-0.5 rounded-full text-sm font-medium text-blue-300 md:mt-2 lg:mt-0">
                    <%= board.language %>
                  </span>
                  <span class="text-sm leading-5 font-semibold text-blue-600">
                    <%= board.cards.count%>題
                  </span>
                </div>
                <dt class="flex justify-start my-4 text-xl leading-5 font-medium text-blue-800 font-bold truncate">
                  <%= board.title %>
                </dt>
                <hr>
                <p class="my-4 text-gray-500 h-12 overflow-hidden"><%= board.description %></p>
                <dd class="flex justify-between items-center mt-5">
                </dd>
              </dl>
            </div>
          <% end %>
        <% end %>
      </div>

      <div id="profile-cards"  class="-my-2 py-2 overflow-x-auto sm:-mx-6 sm:px-6 lg:-mx-8 lg:px-8">
        <div class="align-middle inline-block min-w-full shadow overflow-hidden sm:rounded-lg border-b border-gray-200">
          <table class="min-w-full">
            <tbody class="bg-white">
              <% order = 1 %> 
              <% @solved_card.try(:each) do |record| %>
              <tr>
                <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-200">
                  <div class="flex items-center">
                    <div class="flex items-center justify-between h-10 w-10 ">
                      <p class="text-3xl text-center align-center text-gray-500">
                        <% params[:page] = 1 if params[:page].nil? %>
                        <%= order + ((params[:page].to_i - 1) * 6)%>
                      </p>
                    </div>
                    <div class="ml-4 flex-wrap justify-center">
                      <div class="flex justify-between items-center">
                        <div class="text-sm leading-5 font-medium text-gray-900">
                          <span class="inline-flex items-center mr-4 px-2.5 py-0.5 rounded-full text-xs font-medium leading-4 bg-red-100 text-red-800">
                            <%= record.card.board.language %>
                          </span>
                        </div>
                        <div class="text-sm leading-5 font-medium text-gray-900">
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium leading-4 bg-orange-100 text-orange-800">
                              <%= record.card.level %>
                            </span>
                        </div>
                      </div>
                      <div class="text-2xl w-full leading-5 text-black">
                        <%= record.card.title %>
                      </div>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-200">
                  <div class="text-sm leading-5 text-gray-900">
                    <% if record.card.tags %>
                      <%  record.card.tags.each do |tag| %>
                        <span class="inline-flex items-center px-3 py-0.5 rounded-full text-sm font-medium leading-5 bg-blue-100 text-blue-800">
                          <%= tag %>
                        </span>    
                      <% end %>
                    <% end %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-200">
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-200 text-sm leading-5 text-gray-500">    
                </td>
                <td class="px-6 py-4 whitespace-no-wrap text-right border-b border-gray-200 text-sm leading-5 font-medium">
                  <span class="w-full inline-flex">
                    <span class="inline-flex items-center px-3 py-2 border border-gray-300 text-sm leading-4 font-medium rounded bg-blue-600 text-white hover:bg-indigi-500 focus:outline-none focus:border-blue-700 focus:shadow-outline-blue active:bg-blue-700 transition ease-in-out duration-150">
                      <%= link_to 'Answer', board_card_path(board_id: record.card.board.id,id: record.card.id), class: "flex justify-center items-center mr-2 " %>
                      <%= render_svg 'icons/edit' , styles: "fill-current w-3 h-3"%>
                    </span>
                  </span>
                </td>
              </tr>
              <% order = order + 1 %>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>

    </div>
  </div>
</div>

<script>
  $('#level').on('change', function(){
    $('#card_search').submit()
  })
</script>


<script>
  $('#language').on('change', function(){
    $('#board_search').submit()
  })
</script>
